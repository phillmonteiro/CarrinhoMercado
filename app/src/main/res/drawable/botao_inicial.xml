<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_pressed_button" />
            <stroke android:width="1dp" android:color="@color/box_stroke" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/box_stroke"/>
            <stroke android:width="1px" android:color="#ddd" />
            <solid android:color="#FFF" />
        </shape>
    </item>
</selector>